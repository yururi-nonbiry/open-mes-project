# Django/Backend Service Settings
# Djangoのシークレットキー。本番環境では必ず変更してください。
SECRET_KEY='django-insecure-change-me'
# デバッグモード。本番環境ではFalseに設定してください。
DEBUG=False

# 許可するホスト名。カンマ区切りで指定します。
ALLOWED_HOSTS=your-domain.com,localhost,127.0.0.1,frontend

# CSRF信頼済みオリジン。カンマ区切りで指定します。
CSRF_TRUSTED_ORIGINS=https://your-domain.com,http://localhost:8000

# CORS許可オリジン。カンマ区切りで指定します。
CORS_ALLOWED_ORIGINS=https://your-domain.com,http://localhost

# Database Settings
DATABASE_URL=postgres://django:django@db:5432/open_mes
# Postgres Container Settings
POSTGRES_USER=django
POSTGRES_PASSWORD=django
POSTGRES_DB=open_mes

# Certbot / HTTPS Settings
# 証明書を取得するドメイン
DOMAIN=your-domain.com
# 証明書取得に使用するメールアドレス
EMAIL=your-email@example.com
# テスト用証明書を使用するかどうか (true: テスト用, false: 本番用)
# テスト用はレート制限が緩いため、動作確認時はtrueにすることを推奨します。
CERTBOT_USE_STAGING=true
